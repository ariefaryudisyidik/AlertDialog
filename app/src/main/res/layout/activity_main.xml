<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_dialog_cancelable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_cancelable" />

    <Button
        android:id="@+id/btn_dialog_non_cancelable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_non_cancelable" />

    <Button
        android:id="@+id/btn_dialog_positive_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_positive_negative_button" />

    <Button
        android:id="@+id/btn_custom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_layout_dialog" />

</LinearLayout>